{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 style="margin-top:20px">Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                 {% for unRole in utilisateur.roles %}
                    {% if unRole == "ROLE_USER"%}
                        Utilisateur
                    {% elseif unRole == "ROLE_EDITOR"%}
                        Editeur
                    {% else %}
                        Administrateur
                    {% endif %}
                 {% endfor %}
                 </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" style="margin-right: 10px" href="{{ path('utilisateur_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}">Editer</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
