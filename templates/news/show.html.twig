{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1 style="margin-top:20px">News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ news.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ news.contenu }}</td>
            </tr>
            <tr>
                <th>Datenews</th>
                <td>{{ news.datenews ? news.datenews|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img style="width:180px; height:80px" src="{{ asset('images/Divers/' ~ news.image) }}">
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" style="margin-right: 10px" href="{{ path('news_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('news_edit', {'id': news.id}) }}">Editer</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
