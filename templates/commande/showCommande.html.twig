{% extends 'base.html.twig' %}

{% block title %}Détail de la commande
{% endblock %}

{% block body %}

	<h2 style="margin-top: 50px; margin-bottom: 20px">Détail de la commande</h2>

	<table class="table" style="margin-top: 15px;">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Photo</th>
				<th scope="col">Référence</th>
				<th scope="col">Désignation</th>
				<th scope="col">Prix</th>
				<th scope="col">Quantite</th>
				<th scope="col">Montant</th>
			</tr>
		</thead>
		<tbody>
			{% for unProduit in lesfleurs %}

				<tr>
					<td><img class='card-img-top' src="{{ asset('/Images/Fleurs/' ~ unProduit.fleur.photo) }}" alt=''></td>
					<td>{{unProduit.fleur.id}}</td>
					<td>{{unProduit.fleur.designation}}</td>
					<td>{{unProduit.fleur.prix}}
						€</td>
					<td>{{unProduit.qte}}</td>
					{% set montant =  unProduit.fleur.prix * unProduit.qte  %}

					<td>{{ montant }}€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a type='button' class='btn btn-primary' href="{{ path('commande_add') }}">Reour à la liste de vos commandes</a>

{% endblock %}
